<Window x:Class="Angelo.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Angelo"
        mc:Ignorable="d"
        Title="DebugWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
            <Label>X</Label>
            <TextBox Name="DInput1" Width="150"></TextBox>
            <Label>Y</Label>
            <TextBox Name="DInput2" Width="150"></TextBox>
            <Label>W</Label>
            <TextBox Name="DInput3" Width="150"></TextBox>
            <Label>H</Label>
            <TextBox Name="DInput4" Width="150"></TextBox>
            <Button Name="DInputB1" Click="DInputB1_Click">Do Something</Button>
        </StackPanel>
        <Border Margin="0 10" BorderThickness="1" BorderBrush="Black">
            <Image Name="ImageDisplay" MinHeight="5" Stretch="None"></Image>
        </Border>
        <TextBlock Name="DText1"></TextBlock>
    </StackPanel>
</Window>
